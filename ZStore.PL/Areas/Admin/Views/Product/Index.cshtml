@model IEnumerable<Product>

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2-"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        
            <div class="row pb-3">
               
                <div class="col-12 text-end">
                    <a asp-action="Upsert" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Product
                    </a>
                </div>
            </div>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ISBN)
                        </th>
                    <th>
                        Price
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        Category
                    </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                            @Html.DisplayFor(modelItem => item.Title)
                            </td>
                            <td>
                            @Html.DisplayFor(modelItem => item.ISBN)
                            </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ListPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author)
                        </td>
                        <td>
                            
                        </td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                <a asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
       

    </div>

</div>


